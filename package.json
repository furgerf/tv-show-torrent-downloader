    "request": "*",
    "restify": "*",
    "sha1": "*"
  },
  "devDependencies": {
    "apidoc": "*",
    "frisby": "*",
    "istanbul": "*",
    "jshint": "*",
    "jasmine-node": "*",
    "rewire": "*"
  }
