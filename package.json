{
  "name": "tv-show-torrent-downloader",
  "version": "1.0.0",
  "description": "Downloads new episodes of TV shows using torrents.",
  "main": "server.js",
  "scripts": {
    "start": "supervisor server.js | node_modules/bunyan/bin/bunyan",
    "stop": "pkill tv-show-api --signal SIGINT",
    "test": "mocha test/",
    "lint": "jshint src/ --verbose --show-non-errors || true",
    "start-covered": "istanbul cover --handle-sigint --dir gen/coverage/server server.js | node_modules/bunyan/bin/bunyan",
    "test-covered": "istanbul cover --dir gen/coverage/test/ _mocha -- foo.js || true",
    "combine-coverage": "istanbul-combine -d gen/coverage/combined -p detail -r html -r cobertura gen/coverage/server/coverage.json gen/coverage/test/coverage.json",
    "cover": "(npm run start-covered; npm run combine-coverage) & sleep 1; npm run test-covered; npm stop",
    "lint-xml": "jshint src/ --verbose --show-non-errors --reporter checkstyle > gen/jshint.xml || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/furgerf/tv-show-torrent-downloader"
  },
  "author": "Fabian Furger",
  "license": "ISC",
  "dependencies": {
    "bunyan": "*",
    "csprng": "*",
    "mongodb": "*",
    "mongoose": "*",
    "promise": "*",
    "q": "*",
    "request": "*",
    "restify": "*",
    "sha1": "*"
  },
  "devDependencies": {
    "apidoc": "*",
    "chai": "*",
    "istanbul": "*",
    "istanbul-combine": "*",
    "jshint": "*",
    "mocha": "*",
    "rewire": "*",
    "supertest": "*"
  }
}
