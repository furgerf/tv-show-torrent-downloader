{
  "name": "tv-show-torrent-downloader",
  "version": "1.0.0",
  "description": "Downloads new episodes of TV shows using torrents.",
  "main": "server.js",
  "scripts": {
    "start": "supervisor server.js | node_modules/bunyan/bin/bunyan",
    "stop": "pkill tv-show-api --signal SIGINT",
    "test": "mocha --check-leaks --full-trace --inline-diffs --no-exit --recursive",
    "auto-test": "mocha -w --recursive",
    "cover": "istanbul cover --dir gen/coverage/ _mocha -- --recursive || true",
    "cover-report": "istanbul cover --dir gen/coverage/ --report html --report cobertura _mocha -- --recursive -R xunit --reporter-options output=gen/xunit-report.xml || true",
    "lint": "jshint src/ --verbose --show-non-errors || true",
    "lint-test": "jshint test/ --verbose --show-non-errors || true",
    "lint-xml": "jshint src/ --verbose --show-non-errors --reporter checkstyle > gen/jshint.xml || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/furgerf/tv-show-torrent-downloader"
  },
  "author": "Fabian Furger",
  "license": "ISC",
  "dependencies": {
    "bunyan": "*",
    "csprng": "*",
    "mongodb": "*",
    "mongoose": "*",
    "promise": "*",
    "q": "*",
    "request": "*",
    "restify": "*",
    "sha1": "*"
  },
  "devDependencies": {
    "apidoc": "*",
    "chai": "*",
    "istanbul": "*",
    "istanbul-combine": "*",
    "jshint": "*",
    "mocha": "*",
    "rewire": "*",
    "supertest": "*"
  }
}
